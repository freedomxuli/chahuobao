@model ChaHuoBaoWeb.Models.User
@{
    ViewBag.Title = "账户修改";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit" />
    <title>常州查货宝管理平台</title>
    <link href="../../Content/H/css/bootstrap.min.css?v=3.4.0" rel="stylesheet" />
    <link href="../../Content/H/css/font-awesome.min.css?v=4.3.0" rel="stylesheet" />
    <link href="../../Content/H/css/animate.min.css" rel="stylesheet" />
    <link href="../../Content/H/css/style.min.css?v=3.2.0" rel="stylesheet" />
    <!-- 日期框 -->
    <link type="text/css" rel="stylesheet" href="../../H/js/plugins/layer/laydate/need/laydate.css" />
    <link type="text/css" rel="stylesheet" href="../../H/js/plugins/layer/laydate/skins/default/laydate.css"
        id="LayDateSkin" />
</head>
<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            账户修改
                        </h5>
                    </div>
                    <div class="ibox-content">
                        @using (Html.BeginForm("Edit", "APPZhangHaoGuanLi", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal m-t" }))
                        {
                            <input type="text" id="msg" value="@ViewData["msg"]" style="display: none"/>
                            <input id="UserID" readonly=readonly name="UserID" value="@Model.UserID" type="text" style="display: none" />
                            <div class="form-group draggable">
                                <label class="col-sm-4 control-label">
                                    用户名：</label>
                                <div class="col-sm-3">
                                    <input class="form-control" id="UserName" readonly=readonly name="UserName" value="@Model.UserName" type="text" />
                                </div>
                            </div>

                            <div class="form-group draggable">
                                <label class="col-sm-4 control-label">
                                    微信查询：</label>
                                <div class="col-sm-3">
                                    @Html.CheckBoxFor(m => m.UserWxEnable, new { @Checked = ViewData["UserWxEnable"] })
                                </div>
                            </div>
                            
                            
                            <div class="form-group draggable">
                                <label class="col-sm-4 control-label">
                                    备注：</label>
                                <div class="col-sm-3">
                                    <input class="form-control" id="beizhu" name="beizhu"  type="text" />
                                </div>
                            </div>
                            <div class="hr-line-dashed">
                            </div>
                            <div class="form-group draggable">
                                <div class="col-sm-12 col-sm-offset-4">
                                    <button class="btn btn-primary" type="submit">
                                        保存</button>
                                        <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "APPZhangHaoGuanLi")';return false;">
                                        返回账户列表</button>
                                </div>
                            </div>
                            <div class="clearfix">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script src="../../Content/H/js/jquery-2.1.1.min.js" type="text/javascript"></script>
    <script src="../../Content/H/js/bootstrap.min.js?v=3.4.0" type="text/javascript"></script>
    <script src="../../Content/H/js/plugins/metisMenu/jquery.metisMenu.js" type="text/javascript"></script>
    <script src="../../Content/H/js/plugins/slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="../../Content/H/js/plugins/layer/layer.min.js" type="text/javascript"></script>
    <!-- 日期框JS -->
    <script src="../../Content/H/js/plugins/layer/laydate/laydate.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            if ($("#msg").val() !== "") {
                alert($("#msg").val());
                $("#msg").fadeOut(3000);
            }
        });
    </script>
</body>
</html>
