@model ChaHuoBaoWeb.Models.RoleEditViewModel
@{
    ViewBag.Title = "角色管理-修改";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit" />
    <title>常州查货宝管理平台</title>
    <link href="../../Content/H/css/bootstrap.min.css?v=3.4.0" rel="stylesheet" />
    <link href="../../Content/H/css/font-awesome.min.css?v=4.3.0" rel="stylesheet" />
    <link href="../../Content/H/css/animate.min.css" rel="stylesheet" />
    <link href="../../Content/H/css/style.min.css?v=3.2.0" rel="stylesheet" />
    <!-- 日期框 -->
    <link type="text/css" rel="stylesheet" href="http://www.zi-han.net/theme/hplus/js/plugins/layer/laydate/need/laydate.css" />
    <link type="text/css" rel="stylesheet" href="http://www.zi-han.net/theme/hplus/js/plugins/layer/laydate/skins/default/laydate.css"
        id="LayDateSkin" />
    <style type="text/css">
        #quanxiantable label
        {
        	width:93%;
        	height:20px;
        	font-size:15px;
        	padding-left:15px;
        	border-width:1px;
        	border-color:Gray;
        }
        #quanxiantable input
        {
        	width:5%;
        	height:20px;
        	
        }
    </style>
</head>
<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            角色管理 - 修改
                        </h5>
                    </div>
                    <div class="ibox-content">
                        @using (Html.BeginForm("Edit", "JueSeGuanLi", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal m-t" }))
                        {
                            @Html.HiddenFor(model => model.role.RoleID)
                            @Html.HiddenFor(model => model.role.RoleGroup)
                            <input type="text" id="msg" value="@ViewData["msg"]" style="display: none"/>
                            <div class="form-group" style="margin-top: 7px">
                                <label class="control-label col-sm-2">
                                    角色名称：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(m => m.role.RoleName, new { @class = "form-control" })
                                </div>
                                <label class="control-label col-sm-2">
                                    角色备注：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(m => m.role.RoleRemark, new { @class = "form-control" })
                                </div>
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTables-example"
                                width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            功能权限
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td id="quanxiantable">
                                            @Html.CheckBoxListFor(model => model.postquanxianids.Ids,
                          model => model.allquanxians,
                          entity => entity.id,
                          entity => entity.name,
                          entity => entity.isselected
                         )
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="form-group draggable">
                                <div class="col-sm-12 col-sm-offset-4">
                                    <button class="btn btn-primary" type="submit">
                                        保存修改角色</button>
                                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "JueSeGuanLi")';return false;">
                                        返回角色列表</button>
                                </div>
                            </div>
                            <div class="clearfix">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script src="../../Content/H/js/jquery-2.1.1.min.js" type="text/javascript"></script>
    <script src="../../Content/H/js/bootstrap.min.js?v=3.4.0" type="text/javascript"></script>
    <script src="../../Content/H/js/plugins/metisMenu/jquery.metisMenu.js" type="text/javascript"></script>
    <script src="../../Content/H/js/plugins/slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="../../Content/H/js/plugins/layer/layer.min.js" type="text/javascript"></script>
    <!-- 日期框JS -->
    <script src="../../Content/H/js/plugins/layer/laydate/laydate.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            if ($("#msg").val() !== "") {
                alert($("#msg").val());
                $("#msg").fadeOut(3000);
            }
        });
    </script>
</body>
</html>
