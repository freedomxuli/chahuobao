@model IEnumerable<ChaHuoBaoWeb.Models.JiaGeCeLve>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit" />
    <title>常州查货宝管理平台</title>
    <link href="../../Content/H/css/bootstrap.min.css?v=3.4.0" rel="stylesheet" />
    <link href="../../Content/H/css/font-awesome.min.css?v=4.3.0" rel="stylesheet" />
    <link href="../../Content/H/css/animate.min.css" rel="stylesheet" />
    <link href="../../Content/H/css/style.min.css?v=3.2.0" rel="stylesheet" />
    <!-- 日期框 -->
    <link type="text/css" rel="stylesheet" href="http://www.zi-han.net/theme/hplus/js/plugins/layer/laydate/need/laydate.css" />
    <link type="text/css" rel="stylesheet" href="http://www.zi-han.net/theme/hplus/js/plugins/layer/laydate/skins/default/laydate.css"
        id="LayDateSkin" />
</head>
<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            价格策略
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <div class="pull-left" width="100%">
                            <form class="form-inline" role="form" action="/JiaGeCheLve/CeLve">
                            <div class="form-group">
                                 @Html.ActionLink("新增充值策略", "ChongZhiCeLvXinZeng", "XiTongGuanLi", new { @class = "btn btn-primary block" })
                            </div>
                            </form>
                        </div>
                        <div style="margin-top: 50px">
                            <table class="table table-striped table-bordered table-hover dataTables-example"
                                data-toggle="table" width="100%">
                                <thead>
                                    <tr>
                                        <th style="width: 2%">
                                            序号
                                        </th>
                                        <th style="width: 15%">
                                            套餐名称
                                        </th>
                                         <th style="width: 6%">
                                            充值次数
                                        </th>
                                        <th style="width: 6%">
                                            充值金额
                                        </th>
                                        <th style="width: 6%">
                                            备注
                                        </th>
                                        <th style="width: 6%">
                                            操作
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int n = 0;}
                                    @foreach (var item in Model)
                                    {
                                        if (item.JiaGeCeLveLeiXing == "ChongZhi")
                                        {
                                            //var tdid = item.JiaGeCeLveID;
                                            n = n + 1;
                                        <tr id="@item.JiaGeCeLveID">
                                            <td>
                                                @n
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JiaGeCeLveName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JiaGeCeLveCiShu)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JiaGeCeLveJinE)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JiaGeCeLveRemark)
                                            </td>
                                            <td>
                                           @if (item.JiaGeCeLveCiShu != 1)
                                           {
                                                <input class="btn btn-info btn-sm" name="shanchu" type="button" value="删除" id="@(item.JiaGeCeLveID + "sc")" />
                                               }else
                                               {
                                               
                                               @Html.ActionLink("修改", "CeLvXiuGai", "XiTongGuanLi", new { id = item.JiaGeCeLveID, }, new { @class = "btn btn-info btn-sm" })
                                               }
                                            </td>
                                        </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="pull-left" width="100%">
                           @* <form class="form-inline" role="form" action="/JiaGeCheLve/CeLve">
                            <div class="form-group">
                                @Html.ActionLink("新增押金策略", "APPGongSiXinZeng", "APPGuanLi", new { lianmengid = "1", backaction = "ZhuanXianFuWuLianMeng" }, new { @class = "btn btn-primary block" })
                            </div>
                            </form>*@
                        </div>
                        <div style="margin-top: 50px">
                            <table class="table table-striped table-bordered table-hover dataTables-example"
                                data-toggle="table" width="100%">
                                <thead>
                                    <tr>
                                        <th style="width: 2%">
                                            序号
                                        </th>
                                        <th style="width: 15%">
                                            套餐名称
                                        </th>
                                        <th style="width: 6%">
                                            订购数量（包含）
                                        </th>
                                        <th style="width: 6%">
                                            订购单价
                                        </th>
                                        <th style="width: 6%">
                                            备注
                                        </th>
                                        <th style="width: 6%">
                                            操作
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int z = 0;}
                                    @foreach (var item in Model)
                                    {
                                        if (item.JiaGeCeLveLeiXing == "YaJin")
                                        {

                                            z = z + 1;
                                        <tr id="@item.JiaGeCeLveID">
                                            <td>
                                                @z
                                            </td>
                                             <td>
                                                @Html.DisplayFor(modelItem => item.JiaGeCeLveName)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.JiaGeCeLveCiShu)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JiaGeCeLveJinE)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JiaGeCeLveRemark)
                                            </td>
                                            <td>
                                               
                                                @Html.ActionLink("修改", "CeLvXiuGai", "XiTongGuanLi", new { id = item.JiaGeCeLveID, }, new { @class = "btn btn-info btn-sm" })
                                            </td>
                                        </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        @*                        <div class="right_page">
                            <span style="float: left; line-height: 26px; margin-left: 5px;"><span style="float: left">
                                共 </span><span style="float: left" class="pageNun">@Model.Count()</span><span style="float: left">条记录</span></span>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script src="../../Content/H/js/jquery-2.1.1.min.js" type="text/javascript"></script>
    <script src="../../Content/H/js/bootstrap.min.js?v=3.4.0" type="text/javascript"></script>
    <script src="../../Content/H/js/plugins/metisMenu/jquery.metisMenu.js" type="text/javascript"></script>
    <script src="../../Content/H/js/plugins/slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="../../Content/H/js/plugins/layer/layer.min.js" type="text/javascript"></script>
    <!-- 日期框JS -->
    <script src="../../Content/H/js/plugins/layer/laydate/laydate.js" type="text/javascript"></script>
    @*<-- 删除公司 -->*@     
    <script type="text/javascript">
        $(function () {
            $("input[name=shanchu]").click(function () {
                if (!confirm("确定要删除当前公司信息吗？")) {
                    return false;
                }
                var length = $(this).attr("id").length;
                var JiaGeCeLveID = $(this).attr("id").substr(0, length - 2);
                if (JiaGeCeLveID != "") {
                    $.post("/XiTongGuanLi/ChongZhiCeLvShangChu", { "JiaGeCeLveID": JiaGeCeLveID }, function (data) {
                        $("#" + JiaGeCeLveID).remove();
                        alert(data);
                    }
                , "json");
                }
                //alert("回调完成");
            }
    )
        }
);
    </script>
</body>
</html>
