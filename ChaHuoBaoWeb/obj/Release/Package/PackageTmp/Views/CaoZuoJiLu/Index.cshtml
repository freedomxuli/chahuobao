<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="panel panel-default">
            <div class="panel-heading">
                操作记录</div>
            <div class="panel-body">
                <form id="formSearch" name="formSearch" class="form-horizontal" role="form" action=""
                method="post">
                <div id="wherebar" class="form-group" style="margin-top: 7px">
                    <label class="control-label col-sm-1" for="UserName" style="margin-top: 7px">
                        用户名</label>
                    <div class="col-sm-3" style="margin-top: 7px">
                        <input name="UserName" type="text" class="form-control" id="UserName" />
                    </div>
                    <label class="control-label col-sm-1" for="UserCity" style="margin-top: 7px">
                        所属地区</label>
                    <div class="col-sm-3" style="margin-top: 7px">
                        <input name="UserCity" type="text" class="form-control" id="UserCity" />
                    </div>
                    <label class="control-label col-sm-1" for="YunDanBianHao" style="margin-top: 7px">
                        运单编号</label>
                    <div class="col-sm-3" style="margin-top: 7px">
                        <input name="YunDanBianHao" type="text" class="form-control" id="YunDanBianHao" />
                    </div>
                    <label class="control-label col-sm-1" for="CaoZuoLeiXing" style="margin-top: 26px">
                        操作类型</label>
                    <div class="col-sm-3" style="margin-top: 26px">
                        <input name="CaoZuoLeiXing" type="text" class="form-control" id="CaoZuoLeiXing" />
                    </div>
                    <label class="control-label col-sm-1" for="startDate" style="margin-top: 26px">
                        开始日期</label>
                    <div class="col-sm-3" style="margin-top: 26px">
                        <input name="startDate" class="laydate-icon form-control layer-date" onclick="laydate({ istime: true, format: 'YYYY-MM-DD' })"
                            id="startDate" />
                    </div>
                    <label class="control-label col-sm-1" for="endDate" style="margin-top: 26px">
                        结束日期</label>
                    <div class="col-sm-3" style="margin-top: 26px">
                        <input name="endtDate" class="laydate-icon form-control layer-date" onclick="laydate({ istime: true, format: 'YYYY-MM-DD' })"
                            id="endDate" />
                    </div>
                    <div class="col-sm-3" style="margin-top: 26px;margin-left:811px">
                        <button type="button" id="btnSearch" class="btn btn-primary">
                            查询</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="ibox-content">
            <table id="exampleTableEvents" data-height="400">
                <thead>
                    <tr>
                        <th data-field="id">
                            序号
                        </th>
                        <th data-field="UserName">
                            用户名
                        </th>
                        <th data-field="UserCity">
                            所在区域
                        </th>
                        <th data-field="CaoZuoLeiXing">
                            操作类型
                        </th>
                        <th data-field="CaoZuoTime">
                            操作时间
                        </th>
                        <th data-field="CaoZuoNeiRong">
                            操作内容
                        </th>
                        <th data-field="CaoZuoRemark">
                            备注
                        </th>
                    </tr>
                </thead>
            </table>
